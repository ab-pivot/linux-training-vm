#!/bin/bash
set -ex
apt-get update

# install dev stuff
apt-get install -y neovim golang git

# install python junk for vimfiles
apt-get install -y python-pip python-dev build-essential
pip install --upgrade pip

# install lib*-dev requirements
apt-get install -y util-linux libacl1-dev libselinux1-dev gcc make libseccomp-dev libcap-dev libcap-ng-utils golang

git clone https://github.com/luan/vimfiles.git ~/vimfiles
pushd ~/vimfiles
  ./bin/install --non-interactive
popd

export GOPATH=/workspace/go/
